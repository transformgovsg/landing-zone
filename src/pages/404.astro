---
import Layout from '@layouts/Layout.astro';
---

<Layout title="404 - Transform">
  <main class="grid min-h-full place-items-center">
    <div class="px-6 py-24 sm:py-32 lg:px-8">
      <h1 class="mt-4 text-center text-6xl font-bold tracking-tight text-slate-900 sm:text-7xl">
        404 :(
      </h1>
      <p class="mt-6 text-center text-base leading-7 text-slate-600">
        Sorry, we couldn't find the page you're looking for.
      </p>
      <div class="mt-6 flex justify-center">
        <a
          href="/"
          class="inline-flex items-center gap-x-1 rounded-full bg-primary px-6 py-3 text-sm font-semibold text-slate-900 hover:brightness-95 active:brightness-75"
        >
          <span aria-hidden="true">&larr;</span>
          Back to home
        </a>
      </div>
    </div>
  </main>
</Layout>
